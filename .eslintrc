{
    "root": true,
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "globals": {
      "request": true,
      "server": true,
      "addressModel": true,
      "userModel": true,
      "bukkaModel": true,
      "mealModel": true,
      "generateToken": true,
      "orderModel": true,
      "contactModel": true,
      "signinHash": true,
      "signinSlug": true,
      "getUserSlug": true,
      "getUser1Slug": true
    },
    "rules": {
      "linebreak-style": 0,
      "one-var": 0,
      "one-var-declaration-per-line": 0,
      "max-len": [1, 80, 4],
      "new-cap": 0,
      "no-useless-escape": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "eqeqeq": 0,
      "func-names": 0,
      "curly": ["error", "multi-line"],
      "import/extensions": "off",
      "import/no-unresolved": "off",
      "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": true,
          "requireReturnType": true,
          "requireParamDescription": false,
          "requireReturnDescription": true
        }
      ],
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ]
    }
  }